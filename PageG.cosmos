.body{
    font-family: 'Open Sans';
    font-size: 18px;
    letter-spacing: 0px;
    font-weight: 400;
    line-height: 28px;
    background: url("cosmos.jpeg") right no-repeat;
    background-size: cover;
  }
  body:before {
    content: "";
    display: false;
    position: fixed;
    margin: 0;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color:gray;
  }